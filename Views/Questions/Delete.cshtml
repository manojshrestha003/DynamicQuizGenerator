@model DynamicQuizGenerator.Models.Question
@{
    ViewData["Title"] = "Delete Question";
}

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
    }

    .card {
        background: #fff;
        padding: 20px 25px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

        .card h2 {
            margin-bottom: 15px;
            font-size: 1.5rem;
            text-align: center;
            color: #dc3545; /* red for warning */
        }

    .question-text {
        font-size: 1.1rem;
        font-weight: 500;
        color: #333;
        background: #f8d7da;
        padding: 10px;
        border-radius: 6px;
        margin: 15px 0;
    }

    .btn {
        border-radius: 6px;
        padding: 8px 18px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        margin-left: 10px;
    }
</style>

<div class="container">
    <div class="card">
        <h2>Delete Question</h2>
        <h5 class="text-center">Are you sure you want to delete this question?</h5>

        <div class="question-text text-center">
            <p>@Model.Text</p>
        </div>

        <form asp-action="Delete" method="post" class="text-center">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="QuestionId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" asp-route-quizId="@Model.QuizId" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
