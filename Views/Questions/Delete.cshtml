@model DynamicQuizGenerator.Models.Question
@{
    ViewData["Title"] = "Delete Question";
}

<h2>Delete Question</h2>

<h4>Are you sure you want to delete this question?</h4>
<div>
    <p>@Model.Text</p>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="QuestionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-quizId="@Model.QuizId" class="btn btn-secondary">Cancel</a>
</form>
