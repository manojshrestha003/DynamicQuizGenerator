@model DynamicQuizGenerator.Models.Question

@{
    ViewData["Title"] = "Add Question";
}

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
    }

    .card {
        background: #fff;
        padding: 20px 25px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

        .card h2 {
            margin-bottom: 20px;
            font-size: 1.5rem;
            text-align: center;
            color: #333;
        }

    .form-group label {
        font-weight: 500;
    }

    .btn {
        border-radius: 6px;
        padding: 8px 18px;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        margin-left: 10px;
    }
</style>

<div class="container">
    <div class="card">
        <h2>Add Question</h2>

        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="QuizId" />

            <div class="form-group mb-3">
                <label asp-for="Text"></label>
                <input asp-for="Text" class="form-control" placeholder="Enter question text..." />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div>
                <button type="submit" class="btn btn-success">Add</button>
                <a asp-action="Index" asp-route-quizId="@Model.QuizId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
