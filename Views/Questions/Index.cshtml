@model IEnumerable<DynamicQuizGenerator.Models.Question>
@{
    ViewData["Title"] = "Questions";
    var quizId = ViewBag.QuizId;
}

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        min-height: 100vh;
        font-family: Arial, sans-serif;
        color: #f1f1f1;
    }

    .container {
        max-width: 900px;
        margin: 40px auto;
    }

    .card {
        background: rgba(255, 255, 255, 0.1);
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
    }

        .card h2 {
            margin-bottom: 20px;
            font-size: 1.6rem;
            font-weight: bold;
            text-align: center;
            color: #f1f1f1;
        }

    .btn {
        border-radius: 6px;
        padding: 6px 14px;
        font-size: 0.95rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    table {
        margin-top: 20px;
    }

    .table th {
        background-color: #203a43;
        color: #fff;
        text-align: center;
    }

    .table td {
        vertical-align: middle;
        text-align: center;
        color: #f1f1f1;
        background-color: #203a43;
        
    }

    .action-links a {
        margin: 0 5px;
        text-decoration: none;
        font-weight: 500;
    }

        .action-links a.options {
            color: #007bff;
        }

            .action-links a.options:hover {
                text-decoration: underline;
            }

        .action-links a.edit {
            color: #28a745;
        }

            .action-links a.edit:hover {
                text-decoration: underline;
            }

        .action-links a.delete {
            color: #dc3545;
        }

            .action-links a.delete:hover {
                text-decoration: underline;
            }
</style>

<div class="container">
    <div class="card">
        <h2>Questions for "@ViewBag.QuizTitle"</h2>

        <p class="text-center">
            <a asp-action="Create" asp-route-quizId="@quizId" class="btn btn-primary"> Add Question</a>
            <a asp-controller="Quizzes" asp-action="Index" class="btn btn-secondary"> Back to Quizzes</a>
        </p>

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Question</th>
                    <th>Options Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No questions added yet.</td>
                    </tr>
                }
                else
                {
                    @foreach (var question in Model)
                    {
                        <tr>
                            <td>@question.Text</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @(question.Options?.Count ?? 0)
                                </span>
                            </td>
                            <td class="action-links">
                                <a asp-controller="Options" asp-action="Index" asp-route-questionId="@question.QuestionId" class="options">Options</a> |
                                <a asp-action="Edit" asp-route-id="@question.QuestionId" class="edit">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@question.QuestionId" class="delete">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
