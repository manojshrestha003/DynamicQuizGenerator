<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Quizzyfy- DynamicQuizGenerator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DynamicQuizGenerator.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
    <style>
        .custom-navbar {
            background: linear-gradient(90deg, #000000, #1f1f1f, #2c5364);
            padding: 12px 20px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.4);
        }

            .custom-navbar .nav-link {
                color: #f1f1f1 !important;
                font-weight: 500;
                transition: color 0.3s ease, transform 0.2s ease;
            }

                .custom-navbar .nav-link:hover {
                    color: #ffcc00 !important;
                    transform: translateY(-2px);
                }

                .custom-navbar .nav-link.active {
                    color: #ffcc00 !important;
                    font-weight: 600;
                    border-bottom: 2px solid #ffcc00;
                }

        .navbar-brand {
            font-size: 1.5rem;
            color: #ffcc00 !important;
        }

            .navbar-brand:hover {
                color: #fff !important;
            }

    </style>
</head>
<body>
   
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-lightning-charge-fill text-warning"></i> Quizzyfy
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Quizzes" asp-action="Index">Quizzes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="TakeQuiz" asp-action="Index">Take Quiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Faq" asp-action="Index">FAQs</a>
                        </li>
                        <li class="nav-item d-flex align-items-center">
                            <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Profile">
                                <img src="https://history.ucr.edu/sites/default/files/styles/form_preview/public/Blank%20Profile%20Picture.png?itok=tOY7DAmt"
                                     alt="Profile"
                                     style="width:30px; height:30px; border-radius:50%; margin-right:8px;" />
                               
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-warning btn-sm ms-3 px-3" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 -Quizzyfy DynamicQuizGenerator 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
