@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
   
   body{
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);

   }
    .forgot-password-container {
        min-height: 80vh; 
        display: flex;
        justify-content: center;
        align-items: center;
       
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .forgot-password-card {
        width: 100%;
        max-width: 400px;
        border-radius: 12px;
        padding: 30px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        color: #ffffff;
        text-align: center;
    }

        .forgot-password-card h2 {
            color: #ffffff;
        }

        .forgot-password-card p {
            color: #d1d1d1;
        }

        .forgot-password-card .form-control {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: #ffffff;
        }

            .forgot-password-card .form-control::placeholder {
                color: #d1d1d1;
            }

            .forgot-password-card .form-control:focus {
                background: rgba(255, 255, 255, 0.15);
                color: #ffffff;
                box-shadow: none;
                border: 1px solid #1abc9c;
            }

        .forgot-password-card .btn-primary {
            background: #1abc9c;
            border: none;
            transition: background 0.3s ease;
        }

            .forgot-password-card .btn-primary:hover {
                background: #16a085;
            }

        .forgot-password-card .alert-info {
            background-color: rgba(255, 255, 255, 0.2);
            color: #ffffff;
            border: none;
        }
</style>

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <h2 class="fw-bold mb-2">Forgot Password</h2>
        <p class="mb-4">Enter your email to receive a reset link</p>

        <form method="post" asp-action="ForgotPassword">
            <div class="mb-3 text-start">
                <label for="email" class="form-label fw-semibold">Email</label>
                <input type="email" name="email" id="email" class="form-control form-control-lg" placeholder="Email address" required />
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 mt-2">
                Send Reset Link
            </button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3" role="alert">
                @ViewBag.Message
            </div>
        }
    </div>
</div>
