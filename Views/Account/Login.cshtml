@{
    ViewBag.Title = "Login - Quizzyfy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body{
        background: linear-gradient(135deg, #0f0f0f, #1a1a1a, #2c2c2c);
    }
</style>

<div class="d-flex justify-content-center align-items-center"
     style="min-height: 100vh; background: linear-gradient(135deg, #0f0f0f, #1a1a1a, #2c2c2c);">

    <div class="card shadow-lg p-4 rounded-4"
         style="max-width: 400px; width: 100%; background: rgba(20,20,20,0.95); border: 1px solid #333;">

        <div class="text-center mb-4">
            <h2 class="fw-bold"
                style="background: linear-gradient(90deg, #ff6a00, #ee0979);
                       -webkit-background-clip: text;
                       -webkit-text-fill-color: transparent;">
                Quizzyfy Login
            </h2>
            <p class="text-muted">Enter your credentials to continue</p>
        </div>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation" }))
        {
            <div class="mb-3">
                <label for="Email" class="form-label text-light">Email</label>
                <input type="email" class="form-control bg-dark text-light border-0" id="Email" name="Email"
                       placeholder="Enter your email" required>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label text-light">Password</label>
                <input type="password" class="form-control bg-dark text-light border-0" id="Password" name="Password"
                       placeholder="Enter your password" required>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe">
                    <label class="form-check-label text-light" for="RememberMe">Remember me</label>
                </div>
                <a href="@Url.Action("ForgotPassword", "Account")" class="text-warning text-decoration-none">Forgot Password?</a>
            </div>

            <button type="submit" class="btn w-100 fw-bold text-white"
                    style="background: linear-gradient(90deg, #ff6a00, #ee0979); border: none;">
                Login
            </button>
        }

        <div class="text-center mt-4">
            <p class="text-muted mb-1">Don’t have an account?</p>
            <a asp-controller="Account" asp-action="Register"
               class="btn btn-outline-warning btn-sm rounded-pill px-4">
                Create Account
            </a>
        </div>


        <div class=" mt-4">

            <a asp-controller="Account" asp-action="AdminLogin"
               class="text-decoration-underline ">
                Login as Admin
            </a>
        </div>


    </div>


  
</div>

<script src="~/js/Login.js"></script>
