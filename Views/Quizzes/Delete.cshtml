@model DynamicQuizGenerator.Models.Quiz

<style>
    body{
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
    }
    .delete-quiz-page {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 20px;
    }

    .delete-quiz-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        border-radius: 15px;
        padding: 30px;
        width: 450px;
        color: #f1f1f1;
        text-align: center;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        animation: fadeIn 0.6s ease-in-out;
    }

        .delete-quiz-card h2 {
            color: #f9f9f9;
            margin-bottom: 15px;
        }

        .delete-quiz-card h4 {
            color: #ffd369;
            margin: 15px 0 10px 0;
        }

        .delete-quiz-card p {
            color: #ddd;
            margin-bottom: 20px;
        }

    .btn-danger {
        background: #e63946;
        border: none;
        padding: 10px 18px;
        border-radius: 8px;
        color: white;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-danger:hover {
            background: #b71c1c;
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
        padding: 10px 18px;
        border-radius: 8px;
        color: white;
        font-weight: bold;
        margin-left: 10px;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background: #495057;
        }

   
</style>

<div class="delete-quiz-page">
    <div class="delete-quiz-card">
        <h2>Delete Quiz</h2>
        <p>Are you sure you want to delete this quiz?</p>

        <div class="quiz-details">
            <h4>@Model.Title</h4>
            <p>@Model.Description</p>
        </div>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="QuizId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
