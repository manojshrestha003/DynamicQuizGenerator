@model IEnumerable<DynamicQuizGenerator.Models.Quiz>
@{
    ViewData["Title"] = "Quizzes";
}

<h2>Quizzes</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Quiz</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@quiz.Title</td>
                <td>@quiz.Description</td>
                <td>@quiz.CreatedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@quiz.QuizId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@quiz.QuizId" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-controller="Questions" asp-action="Index" asp-route-quizId="@quiz.QuizId" class="btn btn-sm btn-info">Manage Questions</a>
                </td>
            </tr>
        }
    </tbody>
</table>
