@model DynamicQuizGenerator.Models.Option

@{
    ViewData["Title"] = "Add Option";
}

<style>
    body{
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);

    }
    
    .add-option-page {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        min-height: 80vh; 
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 50px;
        padding-bottom: 50px;
    }

    .add-option-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 30px;
        border-radius: 12px;
        width: 450px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        color: #f1f1f1;
    }

        .add-option-card h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #fff;
        }

        .add-option-card .form-control,
        .add-option-card .form-check-input {
            background: rgba(255,255,255,0.2);
            color: #fff;
            border: none;
        }

            .add-option-card .form-control:focus,
            .add-option-card .form-check-input:focus {
                box-shadow: 0 0 5px #00c6ff;
            }

        .add-option-card .btn {
            margin-top: 15px;
            width: 100px;
        }

        .add-option-card .btn-success {
            background-color: #28a745;
            border: none;
        }

        .add-option-card .btn-secondary {
            background-color: #6c757d;
            border: none;
            margin-left: 10px;
        }

        .add-option-card label {
            color: #ddd;
        }
</style>

<div class="add-option-page">
    <div class="add-option-card">
        <h2>Add Option</h2>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="QuestionId" value="@ViewBag.QuestionId" />

            <div class="form-group">
                <label asp-for="Text"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="IsCorrect" class="form-check-input" />
                <label asp-for="IsCorrect" class="form-check-label"></label>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success">Add</button>
                <a asp-action="Index" asp-route-questionId="@ViewBag.QuestionId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
