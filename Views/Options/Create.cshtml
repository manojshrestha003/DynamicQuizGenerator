@model DynamicQuizGenerator.Models.Option

@{
    ViewData["Title"] = "Add Option";
}

<h2>Add Option</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="QuestionId" value="@ViewBag.QuestionId" />

    <div class="form-group">
        <label asp-for="Text"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsCorrect" class="form-check-input" />
        <label asp-for="IsCorrect" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Add</button>
    <a asp-action="Index" asp-route-questionId="@ViewBag.QuestionId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
