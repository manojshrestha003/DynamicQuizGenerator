@model DynamicQuizGenerator.Models.Option

@{
    ViewData["Title"] = "Delete Option";
}

<h2>Delete Option</h2>

<h3>Are you sure you want to delete this option?</h3>

<div>
    <strong>Text:</strong> @Model.Text<br />
    <strong>Is Correct:</strong> @Model.IsCorrect
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="OptionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-questionId="@Model.QuestionId" class="btn btn-secondary">Cancel</a>
</form>
