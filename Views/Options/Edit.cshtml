@model DynamicQuizGenerator.Models.Option

@{
    ViewData["Title"] = "Edit Option";
}

<h2>Edit Option</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="QuestionId" />

    <div class="form-group">
        <label asp-for="Text"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsCorrect" class="form-check-input" />
        <label asp-for="IsCorrect" class="form-check-label"></label>
        <span asp-validation-for="IsCorrect" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" asp-route-questionId="@Model.QuestionId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
